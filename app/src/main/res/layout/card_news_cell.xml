<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

        <TextView
            android:id="@+id/story_card_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Main Title"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/story_card_section_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/story_card_title_tv"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/rounded_shape_background"
            android:text="story section" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/story_card_section_tv"
            android:layout_marginBottom="6dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/story_card_author_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="story Author Name"
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/story_card_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="23/10/9999"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorLight_grey" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>